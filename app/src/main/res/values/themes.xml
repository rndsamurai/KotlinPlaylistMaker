<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.KotlinPlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:background">@color/background</item>
        <item name="android:statusBarColor">@color/background</item>
    </style>

    <style name="Settings.Theme.KotlinPlaylistMaker" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:background">@color/white</item>
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:textColor">@color/icon</item>
        <item name="color">@color/icon</item>
    </style>

    <style name="Search.Theme.KotlinPlaylistMaker" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:background">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:textColor">@color/icon</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="color">@color/icon</item>
    </style>

    <style name="Tracklist.Theme.KotlinPlaylistMaker" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:background">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:textColor">@color/totalblack</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="color">@color/textgray</item>
        <item name="colorPrimary">@color/icon</item>
        <item name="colorSecondary">@color/textgray</item>
        <item name="colorSecondaryVariant">@color/white</item>
    </style>

    <style name="Theme.KotlinPlaylistMaker" parent="Base.Theme.KotlinPlaylistMaker" />
</resources>