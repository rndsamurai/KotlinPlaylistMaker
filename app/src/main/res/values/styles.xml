<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="mainText">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textFontWeight">500</item>

    </style>
    <style name="settingsMainText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:drawablePadding">28dp</item>


    </style>
    <style name="buttonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/icon</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/icon</item>
        <item name="android:background">@drawable/main_round_button</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="settingsButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:background">@null</item>
        <item name="android:padding">8dp</item>
    </style>
    <style name="settingsText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textFontWeight">400</item>
    </style>
    <style name="tracktext">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textFontWeight">400</item>

    </style>
    <style name="artisttext">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">?attr/colorSecondary</item>

    </style>

</resources>